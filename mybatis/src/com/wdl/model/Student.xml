<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="cm.wdl.dao.StudentDao">

    <select id="selectAllStudent" resultType="com.wdl.model.Student">
		select * from student
       </select>

    <select id="queryStudentById" parameterType="int" resultType="com.wdl.model.Student">
		select * from student where id=#{id}
       </select>

    <select id="queryStudentLikeName" parameterType="String" resultType="com.wdl.model.Student">
		select * from student where username like #{username}
       </select>

    <insert id="insertStudent" parameterType="com.wdl.model.Student">
		insert into
		student(id,username,password,birthday)
		values(#{id},#{username},#{password},#{birthday})
       </insert>

    <delete id="deleteStudentById" parameterType="int">
		delete from
		student where id=#{id}
     </delete>

    <update id="updateStudent" parameterType="com.wdl.model.Student">
		update student set
		username=#{username},
		password=#{password},
		birthday=#{birthday}
		where id =
		#{id}
     </update>

    <select id="selectTSBySid" parameterType="int" resultType="com.wdl.model.TandS">
        select t.id as tid,t.username as tusername,t.password as tpassword,t.birthday as tbirthday,s.id as sid,s.username as susername,s.password as spassword,s.birthday as sbirthday from student s,teacher t where s.id = t.id and s.id = #{sid}
    </select>
</mapper>