<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.yuexin.dao.User2Dao">

    <sql id="userColumns">name</sql>
    <insert id="insert" parameterType="com.yuexin.bean.User">
        insert into user (<include refid="userColumns"/>) values (#{name})
    </insert>

    <select id="getUserById" parameterType="int" resultType="com.yuexin.bean.User">
        select id,name from user where id = #{id}
    </select>

    <update id="updateUser" parameterType="com.yuexin.bean.User">
        update user set name=#{name} where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user where id = #{id}
    </delete>
    <select id="getUsers" resultType="com.yuexin.bean.User">
        select id,name from user;
    </select>

</mapper>